<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".FirstConfiguration.FirstConfigurationActivity">

    <TextView
        android:id="@+id/TextViewFSC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Configuration:"
        android:textColor="#FFFF00"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text = "Enter age here:"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:textColor="#FFFF00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewFSC1" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:textColor="#FFFF00"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewFSC1" />




    <TextView
        android:id="@+id/TextViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter height (cm):"
        android:textColor="#FFFF00"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewAge" />

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="#FFFF00"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAge" />




    <TextView
        android:id="@+id/TextViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter weight (kg):"
        android:textColor="#FFFF00"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewHeight" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="#FFFF00"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHeight" />




    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Choose gender:"
        android:textColor="#FFFF00"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewWeight" />

    <Button
        android:id="@+id/buttonChooseMan"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />

    <Button
        android:id="@+id/buttonChooseWoman"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Woman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />



    <TextView
        android:id="@+id/TextViewWeightGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text = "Enter goal weight (kg):"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:textColor="#FFFF00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />

    <EditText
        android:id="@+id/editWeightGoal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:textColor="#FFFF00"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />





    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Whats your weekly activity level:"
        android:textColor="#FFFF00"
        app:layout_constraintTop_toBottomOf="@+id/editWeightGoal"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />


    <Button
        android:id="@+id/buttonActivityLvl0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/TextView3"
        android:text="Sedentary (little or no exercise)"
        android:textSize="10dp" />

    <Button
        android:id="@+id/buttonActivityLvl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonActivityLvl0"
        android:text="Lightly active (exercise 1–3 days/week)"
        android:textSize="10dp" />

    <Button
        android:id="@+id/buttonActivityLvl2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonActivityLvl1"
        android:text="Moderately active (exercise 3–5 days/week)"
        android:textSize="10dp" />

    <Button
        android:id="@+id/buttonActivityLvl3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonActivityLvl2"
        android:text="Active (exercise 6–7 days/week)"
        android:textSize="10dp" />


    <Button
        android:id="@+id/buttonProceedPressed"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#00FF00"
        android:text="Proceed"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonActivityLvl3" />








</androidx.constraintlayout.widget.ConstraintLayout>