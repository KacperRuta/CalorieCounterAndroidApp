<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".MealDetailsAdding">

    <Button
        android:id="@+id/buttonSaveMeal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="SAVE MEAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ViewLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="650dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonSearchForProduct"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SEARCH FOR YOUR PRODUCT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewLine1" />

    <Button
        android:id="@+id/buttonEnterProduct"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Enter PRODUCT"
        app:layout_constraintBottom_toTopOf="@+id/ViewLine2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearchForProduct" />

    <View
        android:id="@+id/ViewLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="500dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/ViewLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="120dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/ShowCurrentMealCalories"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewLine3"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/ShowCurrentMealProtein"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShowCurrentMealCalories"
        android:layout_marginStart="20dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/ShowCurrentMealFats"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShowCurrentMealCalories" />

    <TextView
        android:id="@+id/ShowCurrentMealCarbs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ShowCurrentMealCalories" />







    <Button
        android:id="@+id/buttonProduct1"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewLine2" />

    <Button
        android:id="@+id/buttonProduct2"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct1" />

    <Button
        android:id="@+id/buttonProduct3"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct2" />

    <Button
        android:id="@+id/buttonProduct4"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct3" />

    <Button
        android:id="@+id/buttonProduct5"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct4" />

    <Button
        android:id="@+id/buttonProduct6"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct5" />

    <Button
        android:id="@+id/buttonProduct7"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct6" />

    <Button
        android:id="@+id/buttonProduct8"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct7" />

    <Button
        android:id="@+id/buttonProduct9"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProduct8" />





</androidx.constraintlayout.widget.ConstraintLayout>